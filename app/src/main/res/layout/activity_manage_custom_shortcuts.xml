<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageCustomShortcutsActivity">

    <ImageView
        android:id="@+id/iv_manage_custom_shortcuts_wallpaper"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:tintMode="multiply"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_manage_custom_shortcuts_wallpaper_tint"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black"
        android:backgroundTint="#60FFFFFF"
        android:backgroundTintMode="multiply"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_manage_custom_shortcuts_lpane"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_24sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_manage_custom_shortcuts_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:padding="@dimen/_3sdp"
            android:paddingStart="@dimen/_6sdp"
            android:text="@string/manage_custom_shortcuts_title"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/iv_manage_custom_shortcuts_back"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            android:clickable="true"
            android:contentDescription="@string/manage_custom_shortcuts_back"
            android:focusable="true"
            android:focusableInTouchMode="false"
            android:padding="@dimen/_8sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_back"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageView
            android:id="@+id/iv_manage_custom_shortcuts_add"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            android:clickable="true"
            android:contentDescription="@string/manage_custom_shortcuts_add"
            android:focusable="true"
            android:focusableInTouchMode="false"
            android:padding="@dimen/_8sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_manage_custom_shortcuts_back"
            app:srcCompat="@drawable/ic_add"
            tools:ignore="TouchTargetSizeCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_manage_custom_shortcuts_shortcuts"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_24sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:padding="@dimen/_10sdp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cl_manage_custom_shortcuts_lpane"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/layout_appitem_grid" />

    <ProgressBar
        android:id="@+id/pbr_manage_custom_shortcuts_loading"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_24sdp"
        android:layout_marginEnd="@dimen/_36sdp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_manage_custom_shortcuts_wallpaper"
        app:layout_constraintEnd_toEndOf="@+id/iv_manage_custom_shortcuts_wallpaper"
        app:layout_constraintStart_toEndOf="@+id/cl_manage_custom_shortcuts_lpane"
        app:layout_constraintTop_toTopOf="@+id/iv_manage_custom_shortcuts_wallpaper" />

</androidx.constraintlayout.widget.ConstraintLayout>